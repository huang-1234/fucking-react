{
  "name": "seclinter-vscode",
  "displayName": "SecLinter",
  "description": "Web security scanning and protection for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Linters",
    "Security"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:html",
    "onLanguage:css",
    "onCommand:seclinter.scanWorkspace",
    "onCommand:seclinter.scanFile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "seclinter.scanWorkspace",
        "title": "SecLinter: Scan Workspace for Security Issues"
      },
      {
        "command": "seclinter.scanFile",
        "title": "SecLinter: Scan Current File for Security Issues"
      },
      {
        "command": "seclinter.fixIssue",
        "title": "SecLinter: Fix Security Issue"
      },
      {
        "command": "seclinter.ignoreIssue",
        "title": "SecLinter: Ignore Security Issue"
      },
      {
        "command": "seclinter.showDocumentation",
        "title": "SecLinter: Show Security Documentation"
      }
    ],
    "configuration": {
      "title": "SecLinter",
      "properties": {
        "seclinter.enableAutoScan": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan files when opened or saved"
        },
        "seclinter.enabledPlugins": {
          "type": "array",
          "default": [],
          "description": "List of enabled plugins"
        },
        "seclinter.pluginsDirectory": {
          "type": "string",
          "default": "node_modules",
          "description": "Directory to look for plugins"
        },
        "seclinter.severityLevel": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "default": "medium",
          "description": "Minimum severity level to report"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "seclinter.scanFile",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "seclinter.scanFile",
          "group": "navigation",
          "when": "resourceLangId =~ /(javascript|typescript|html|css)/"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "seclinter",
          "title": "SecLinter",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "seclinter": [
        {
          "id": "seclinterIssues",
          "name": "Security Issues"
        },
        {
          "id": "seclinterPlugins",
          "name": "Plugins"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.3.5",
    "vscode-test": "^1.6.1"
  }
}
