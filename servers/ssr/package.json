{
  "name": "ssr",
  "version": "1.0.0",
  "description": "React 19 SSR server with Koa and TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build": "npm run build:client && npm run build:server && tsc -p tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rimraf dist"
  },
  "keywords": [
    "ssr",
    "server",
    "node",
    "react",
    "koa",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "koa": "3.0.0",
    "koa-static": "5.0.0",
    "koa-bodyparser": "4.4.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router-dom": "6.22.3",
    "react-helmet-async": "2.0.5"
  },
  "devDependencies": {
    "@types/koa-bodyparser": "4.3.12",
    "@types/koa-static": "4.0.4",
    "@types/koa": "3.0.0",
    "vite": "6.0.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@vitejs/plugin-react": "4.3.4",
    "@types/node": "22.13.10",
    "typescript": "5.8.3",
    "eslint": "8.57.0",
    "ts-node": "10.9.2",
    "vitest": "2.1.5",
    "cross-env": "7.0.3",
    "rimraf": "5.0.5",
    "@vitest/coverage-v8": "2.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}
