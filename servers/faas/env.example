# 服务器配置
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Serverless 基础配置
SERVERLESS_PROVIDER=aws  # aws, aliyun, tencent, custom
STAGE=dev
REGION=us-east-1
MEMORY_SIZE=1024
TIMEOUT=30
RUNTIME=nodejs18.x

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=60000
CACHE_STORAGE=memory  # memory, redis
CACHE_MAX_SIZE=1000
CACHE_NAMESPACE=ssr-cache

# Redis配置（如果使用Redis缓存）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_NODE_TYPE=cache.t3.micro
REDIS_NUM_NODES=1

# 静态资源配置
ASSETS_PREFIX=
CLIENT_ENTRY=/client.js
TEMPLATE_PATH=

# AWS配置
AWS_REGION=us-east-1
AWS_HANDLER=src/serverless/adapter.lambdaHandler
VPC_SECURITY_GROUP=sg-default
VPC_SUBNET_A=subnet-default-a
VPC_SUBNET_B=subnet-default-b
PROVISIONED_CONCURRENCY=5
ASSETS_BUCKET=react-ssr-assets
CDN_DOMAIN=
AWS_ASSETS_PREFIX=

# API网关配置
API_GATEWAY_BASE_PATH=
API_GATEWAY_COMPRESSION_SIZE=1024

# 阿里云配置
ALI_REGION=cn-hangzhou
ALI_RUNTIME=nodejs18
ALI_HANDLER=src/serverless/adapter.fcHandler
ALI_SERVICE_NAME=react-ssr-service
ALI_SERVICE_DESCRIPTION=React SSR Service
ALI_MEMORY_SIZE=1024
ALI_TIMEOUT=30
ALIYUN_OSS_BUCKET=
ALIYUN_OSS_REGION=
ALIYUN_OSS_ENDPOINT=
ALI_ASSETS_PREFIX=

# 腾讯云配置
TENCENT_REGION=ap-guangzhou
TENCENT_RUNTIME=Nodejs18.15
TENCENT_HANDLER=src/serverless/adapter.scfHandler
TENCENT_COS_BUCKET=
TENCENT_COS_REGION=
TENCENT_ASSETS_PREFIX=

# 自定义云服务配置
CUSTOM_PROVIDER=custom
CUSTOM_REGION=
CUSTOM_RUNTIME=nodejs18
CUSTOM_HANDLER=src/serverless/adapter.customHandler
CUSTOM_ASSETS_PREFIX=

# 构建配置
WEBPACK_CONFIG=webpack.serverless.js
PACKAGER=npm

# 性能配置
WORKERS=4